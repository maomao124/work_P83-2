    <groupId>org.example</groupId>
    <artifactId>work_P83-2</artifactId>
    <!--更改项，不能有中文，名称-->
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>16</maven.compiler.source>
        <maven.compiler.target>16</maven.compiler.target>
    </properties>
    <build>
        <finalName>作业_P83-2</finalName>
        <!--更改项，也可以不改，打包的jar文件名称-->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>test</mainClass>
                            <!--更改项，主类名-->
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!--可选模块，添加console_hide模式的jar文件，配合本人开发的jar文件启动器使用。使用实时模板，或者使用下面的-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>install</id>
                        <phase>install</phase>
                        <configuration>
                            <target>
                                <echo message="*******************install*******************"/>
                                <mkdir dir="${basedir}/target/classes"/>
                                <!--创建文件夹-->
                                <copy todir="${project.build.directory}/classes" overwrite="true">
                                    <fileset dir="${project.build.directory}"
                                             erroronmissingdir="false">
                                        <include name="*.jar"/>
                                    </fileset>
                                </copy>

                                <move file="${project.build.directory}/classes/作业_P83-2.jar"
                                      tofile="${project.build.directory}/作业_P83-2_hide.jar"/>

                                <copy todir="${project.build.directory}/classes" overwrite="true">
                                    <fileset dir="${project.build.directory}"
                                             erroronmissingdir="false">
                                        <include name="*.jar"/>
                                    </fileset>
                                </copy>

                                <move file="${project.build.directory}/classes/作业_P83-2.jar"
                                      tofile="${project.build.directory}/作业_P83-2_args.jar"/>

                                <move file="${project.build.directory}/classes/作业_P83-2_hide.jar"
                                      tofile="${project.build.directory}/作业_P83-2_args_save.jar"/>
                                <!--替换的名称-->

                                <!--jar包备份-->
                                <copy todir="H:/jar包/" overwrite="true">
                                    <fileset dir="${project.build.directory}"
                                             erroronmissingdir="false">
                                        <include name="*.jar"/>
                                    </fileset>
                                </copy>

                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>clean</id>
                        <phase>clean</phase>
                        <configuration>
                            <target>
                                <echo message="*******************clean*******************"/>
                                <delete dir="target"/>
                                <mkdir dir="${basedir}/target/classes"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>


